<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".signalRoom.sigRoom.SignalRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="1"
                android:layout_weight="2"
                android:weightSum="10"
                android:layout_height="wrap_content"
                android:background="@color/signal"
                android:useDefaultMargins="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:text="시그널 룸"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:background="@drawable/border_background"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/guideOneToOneCall"
                    android:padding="25dp"
                    android:textSize="16dp" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_weight="8"
                android:background="@color/signal"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/one_to_one_counterpart"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="65dp"
                            android:gravity="left"
                            android:src="@drawable/penguin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="75dp"
                            android:layout_marginTop="110dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="펭귄"/>

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/one_to_one_myself"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="65dp"
                            android:gravity="left"
                            android:src="@drawable/hamster" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="110dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="햄스터"/>

                    </FrameLayout>


                </LinearLayout>


            </GridLayout>

            <RelativeLayout
                android:id="@+id/one_to_one_ui"
                android:layout_width="0dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>
</layout>


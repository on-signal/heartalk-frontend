<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.MainHomeFragment">

    <data>

        <variable
            name="viewModel"
            type="com.heartsignal.hatalk.main.userModel.UserModel" />

        <variable
            name="mainHomeFragment"
            type="com.heartsignal.hatalk.main.MainHomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="@string/Lounge"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <TextView-->
<!--            android:id="@+id/main_home_age"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@{@string/main_home_age(viewModel.age)}"-->
<!--            android:textSize="20sp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/main_home_gender"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            />-->


        <ImageView
            android:id="@+id/home_profile_image"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="31dp"
            app:layout_constraintBottom_toTopOf="@id/matching_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/home_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/main_home_name(viewModel.name)}"
            android:textSize="20dp"
            android:background="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@id/home_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/home_profile_image"
            />

        <TextView
            android:id="@+id/home_profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/main_home_age(viewModel.age)}"
            android:textSize="20dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_profile_image"
            app:layout_constraintStart_toStartOf="@id/home_profile_image" />

        <Button
            android:id="@+id/matching_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:paddingHorizontal="50dp"
            android:text="Matching"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>